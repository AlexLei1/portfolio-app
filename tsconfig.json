{
  "compilerOptions": {
    "target": "es5",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "baseUrl": "./app/",
    "paths": {
      "@/components/*": [
        "components/*"
      ],
      "@/ui/*": [
        "components/ui/*"
      ],
      "@/screens/*": [
        "components/screens/*"
      ],
      "@/data/*": [
        "data/*"
      ],
      "@/shared/*": [
        "shared/*"
      ],
      "@/hooks/*": [
        "hooks/*"
      ],
      "@/services/*": [
        "services/*"
      ],
      "@/utils/*": [
        "utils/*"
      ],
      "@/assets/*": [
        "assets/*"
      ],
      "@/configs/*": [
        "configs/*"
      ],
      "@/store/*": [
        "store/*"
      ],
			"@/animations/*": [
        "animations/*"
      ]
    },
    "plugins": [
      {
        "name": "next"
      }
    ]
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    "**/*.scss",
    "app/hooks/useScrollDirection.js",
    "app/configs/config.js",
    "app/components/ui/Loader/Loader.tsx",
    "app/components/ui/LinkItem/LinkItem.jsxsx",
    "pages/_app.tsx",
    "pages/_document.tsx",
    "pages/index.tsx",
    "app/components/Layout/Header/Nav/BurgerMenu/Burger/Burger.tsx",
    "pages/api/schools.js",
    "pages/api/data/schools.js",
    "app/data/school.js",
    ".next/types/**/*.ts"
, "app/components/ui/LinkItem/LinkItem.tsx"  ],
  "exclude": [
    "node_modules"
  ]
}
